@{
    ViewData["Title"] = "Dogs Page!";
}



<p class="newHeader">Add a new Dog</p>
<div class='bottomBorderAsset'></div>
<div class='capsule'>
  <form action="/dogs" method="post">
    <label for="name" class='center'>Enter the Dog's Name </label>
    <input id="name" class='form-control' name="name" type="text">
    <label for="age" class='center'>Enter the Dog's Age</label>
    <input id="age" class='form-control' name="age" type="number">
    <label for="breed" class='center'>Enter the Dog's Breed</label>
    <input id="breed" class='form-control' name="breed" type="text">
    <button type="submit" class='indexBtn'>Submit</button>
  </form>
</div>

<div class='customCard'>
    <p class="tableHeader">All dogs in the database</p>
    <p class="pageText">Click on a dog to pull up it's individual page</p>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Breed</th>
          <th>Age</th>
        </tr>
      </thead>
      <tbody>
      @foreach (var dog in Model)
      {
          <tr>
            <td><a href="/Dogs/Details/@(dog.DogId)">@dog.DogId</a></td>
            <td><a href="/Dogs/Details/@(dog.DogId)">@dog.Name</a></td>
            <td><a href="/Dogs/Details/@(dog.DogId)">@dog.Breed</a></td>
            <td><a href="/Dogs/Details/@(dog.DogId)">@dog.Age</a></td>
          </tr>
      }
      </tbody>
    </table>
</div>

